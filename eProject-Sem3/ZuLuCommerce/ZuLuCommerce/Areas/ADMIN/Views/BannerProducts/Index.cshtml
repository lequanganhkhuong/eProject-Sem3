@model IEnumerable<ZuLuCommerce.Models.BannerProduct>

@{
    ViewBag.Title = "Banner Product";
}

<h2>Banner Product list</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Product
        </th>
        <th>
            Description 1
        </th>
        <th>
            Description 2
        </th>
        <th>
            PictureUrl
        </th>
        
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Product.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description1)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description2)
        </td>
        <td>
            @{
                var src = "/Uploads/image-not-available.jpg";
                if (item.PictureUrl != null && !item.PictureUrl.Equals("") && File.Exists(Server.MapPath("~/Uploads/Banner/" + item.Id + "/" + item.PictureUrl)))
                {
                    src = "/Uploads/Banner/" + item.Id + "/" + item.PictureUrl;
                }
                <div class="image">
                    <img src="@src" style="height:80px" alt="User Image">
                </div>
            }
        </td>
       
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
