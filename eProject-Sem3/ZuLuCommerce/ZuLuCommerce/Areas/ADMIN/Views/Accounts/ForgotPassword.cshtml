
@{
    Layout = null;
    ViewBag.Title = "ForgotPassword";
}
<!DOCTYPE html>
<html>

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>Login</title>

    <link href="/Content/admin/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/Content/admin/admin/MyCss.css" rel="stylesheet" />

</head>

<body>
    <div class="login-wrap">
        <div class="login-html">
            <input id="tab-1" type="radio" name="tab" class="sign-in" checked><label for="tab-1" class="tab">Change password</label>
            <input id="tab-2" type="radio" name="tab" class="sign-up"><label for="tab-2" class="tab">@*Sign Up*@</label>
            
            <div class="login-form">
                
                <div class="sign-in-htm">
                    <form class="m-t" role="form" method="post">
                        <div class="group">
                            <label for="user" class="label">Username</label>

                            <input id="user" type="text" name="username" class="input" required="">
                        </div>
                        <div class="group">
                            <label for="pass" class="label">Your email address</label>

                            <input id="pass" type="email" name="email" class=" input" required="">
                        </div>

                        <p style="color:red">@ViewBag.Message</p>
                        <div class="group">
                            <input type="submit" class="button" value="Submit">
                        </div>
                    </form>

                    <div class="hr"></div>
                    
                </div>
                
            </div>
            <div class="foot-lnk">Please input your account's username and email, new password will be sent to your email that is registered to your account</div>
        </div>
    </div>
</body>

</html>